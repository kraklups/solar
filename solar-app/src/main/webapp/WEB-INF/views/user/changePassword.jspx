<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:pageTitle="title">


    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">	      
						<form t:type="Form" t:id="changePasswordForm">
							<fieldset>
	   							<t:errors/>
	   							<div class="form-group">        
							        <t:label for="oldPassword"/>
	        						<span class="entry">
	            						<input t:id="oldPassword" t:type="PasswordField"
				       						t:validate="required" 
	                   						size="16" maxlength="8"/>
	        						</span>
	   							</div>
	   
	   							<div class="form-group">        
	        						<t:label for="newPassword"/>
	        						<span class="entry">
	            						<input t:id="newPassword" t:type="PasswordField"
				       						t:validate="required" 
	                   						size="16" maxlength="8"/>
	        						</span>
       							</div>

	   							<div class="form-group">        
	        						<t:label for="retypeNewPassword"/>
	        						<span class="entry">
	            						<input t:id="retypeNewPassword" t:type="PasswordField"
				       						t:validate="required" 
	                   						size="16" maxlength="8"/>
	        						</span>
	    						</div>
	       
	    						<div class="button">
	        						<input type="submit" value="${message:submit}"/>        
	    						</div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    							
</html>