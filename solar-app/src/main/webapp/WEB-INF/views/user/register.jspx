<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:pageTitle="title">

	<div class="page-wrapper">
    
    	<div class="container-fluid">
    		<div class="row">
				<div class="col-lg-12">
            		<h2 class="page-header">Update Registered User</h2>
            	</div>
          	</div>

         	<div class="row">
            	<div class="col-md-4 col-md-offset-3">
                	<div class="login-panel panel panel-default">
                    	<div class="panel-heading">
                        	<h3 class="panel-title">Update Registered User</h3>
                    	</div>
                    	<div class="panel-body">
							<form t:type="Form" t:id="registrationForm">
                            	<fieldset>	   						
	   								<t:errors/>
	   								<div class="form-group">        
		        						<t:label for="loginName"/>
		        						<span class="entry">    
	    	        						<input t:id="loginName" t:type="TextField"
					       						t:validate="required" 
					       						size="16" maxlength="30" />
	        							</span>
	   								</div>
	    
	   								<div class="form-group">        
	        							<t:label for="password"/>
	        							<span class="entry">
	            							<input t:id="password" t:type="PasswordField"
				       							t:validate="required" 
	                   							size="16" maxlength="8"/>
	        							</span>
	    							</div>

	   								<div class="form-group">        
	        							<t:label for="retypePassword"/>
		        						<span class="entry">
		            						<input t:id="retypePassword" t:type="PasswordField"
					       						t:validate="required" 
	        	           						size="16" maxlength="8"/>
	        							</span>
	    							</div>
	    
	   								<div class="form-group">        
	        							<t:label for="firstName"/>
	        							<span class="entry">    
		            						<input t:id="firstName" t:type="TextField"
					       						t:validate="required" 
					       						size="16" maxlength="30" />
	        							</span>
	   								</div>
	   
	   								<div class="form-group">        
	        							<t:label for="surname1"/>
	        							<span class="entry">    
	            							<input t:id="surname1" t:type="TextField"
				       							t:validate="required" 
				       							size="16" maxlength="30" />
	        							</span>
		   							</div>
	   
		   							<div class="form-group">        
		        						<t:label for="surname2"/>
		        						<span class="entry">    
	    	        						<input t:id="surname2" t:type="TextField"
						       					t:validate="required" 
						       					size="16" maxlength="30" />
	    	    						</span>
	   								</div>	   
	   	
	   								<div class="form-group">        
	        							<t:label for="email"/>
		        						<span class="entry">    
		            						<input t:id="email" t:type="TextField"
					       						t:validate="required,regexp" 
					       						size="16" maxlength="30" />
	        							</span>
	   								</div>	   
	    
		    						<div class="button">
			        					<input type="submit" value="${message:submit}"/>        
		    						</div>
	    						</fieldset>		
							</form>
							
                    	</div>
                	</div>
            	</div>
        	</div>
        	
    	</div>
        <!-- /.container-fluid -->

	</div>
    <!-- /#page-wrapper -->   
        	
    	
</html>