<jsp:root 
	xmlns:jsp="http://java.sun.com/JSP/Page" 
	xmlns:tiles="http://tiles.apache.org/tags-tiles" 
	xmlns:spring="http://www.springframework.org/tags"
	xmlns:c="http://java.sun.com/jsp/jstl/core"	
	xmlns:form="http://www.springframework.org/tags/form"	
	xmlns="http://www.w3.org/1999/xhtml"
	version="2.0" >
	
	<jsp:directive.page contentType="text/html;charset=UTF-8"/>
	<jsp:output omit-xml-declaration="yes"/>	

<tiles:insertDefinition name="defaultTemplate">
	<tiles:putAttribute name="body">

<div id="wrapper">

	<div class="page-wrapper">
    
    	<div class="container-fluid">

    		<div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header"><spring:message code="showAlarms.title" /></h2>
                </div>
            </div>
            
        	<div class="row">
            	<div class="col-lg-12">
                	<div class="panel panel-default">
                    	<div class="panel-heading">
                        	<h3 class="panel-title"><spring:message code="showAlarms.menuExplanation" /></h3>
                    	</div>
                    	<div class="panel-body">
                    		  
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>CompanyId</th>
                                        <th>CompanyName</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>                                
                                <tbody>
									<c:forEach var="companyValues" items="${companyList}">
                                    	<tr class="active">
                                    		<td>
												<spring:url value="/company/updateCompany/${companyValues.companyId}" var="updateCompanyUrl" htmlEscape="true"/>
 												<a class="text-center" href="${updateCompanyUrl}">
                                        			<span class="text-muted small">${companyValues.companyId}</span> 											
 												</a>
 											</td>
                                        	<td><span class="text-muted small">${companyValues.companyName}</span></td>
                                        	<td><span class="text-muted small">${companyValues.date}</span></td>
                                    	</tr>				
									</c:forEach>
                                </tbody>
                            </table>
                        </div>
                    		                      		   				   			   	
                    	</div>
                	</div>
            	</div>
        	</div>
        
		</div>
        <!-- /.container-fluid -->

	</div>
    <!-- /#page-wrapper -->  
  
</div>
<!-- /#wrapper -->  
    
	</tiles:putAttribute>
</tiles:insertDefinition>

</jsp:root>