<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:pageTitle="title">

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Create Park</h3>
                    </div>
                    <div class="panel-body">
						<form t:type="Form" t:id="createParkForm">
                            <fieldset>	   						
	   							<t:errors/>
	   							<div class="form-group">        
		        					<t:label for="parkName"/>
		        					<span class="entry">    
	    	        					<input t:id="parkName" t:type="TextField"
					       					t:validate="required" 
					       					size="16" maxlength="30" />
	        						</span>
	   							</div>
	    
	   							<div class="form-group">        
	        						<t:label for="companyName"/>
	        						<span class="entry">    
		            					<input t:id="companyName" t:type="TextField"
					       					t:validate="required" 
					       					size="16" maxlength="30" />
	        						</span>
	   							</div>
	    
	   							<div class="form-group">        
	        						<t:label for="startupDate"/>
	        						<span class="entry">    
		            					<input t:id="startupDate" t:type="TextField"
					       					t:validate="required" 
					       					size="10" maxlength="10" />
	        						</span>
	   							</div>	    

	   							<div class="form-group">        
	        						<t:label for="productionDate"/>
	        						<span class="entry">    
		            					<input t:id="productionDate" t:type="TextField"
					       					t:validate="required" 
					       					size="10" maxlength="10" />
	        						</span>
	   							</div>
	   							
	   						    <div class="form-group">        
	        						<t:label for="solarPark"/>
									<div id="map" class="smallmap"></div>
	        						<span class="entry">    
		            					<input t:id="solarPark" t:type="TextField" />
	        						</span>									
	   							</div>
	   								    
		    					<div class="button">
		        					<input type="submit" value="${message:submit}"/>        
	    						</div>
	    					</fieldset>		
						</form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    	
</html>