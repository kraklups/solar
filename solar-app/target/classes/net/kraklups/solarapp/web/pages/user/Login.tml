<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:pageTitle="title"
	t:menuExplanation="menuExplanation">

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form t:type="Form" t:id="loginForm">
                            <fieldset>
                                <div class="form-group">
	        						<t:label for="loginName"/>
	        						<span class="entry">    
	            					<input t:id="loginName" t:type="TextField"
				       							t:validate="required" 
				       							size="16" maxlength="30" />
	        						</span>                                    
                                </div>
                                <div class="form-group">
	        						<t:label for="password"/>
	        						<span class="entry">
	            						<input t:id="password" t:type="PasswordField"
				       							t:validate="required" 
	                   							size="16" maxlength="8"/>
	        						</span>                                    
                                </div>
                                <div class="checkbox">
            						<t:label for="rememberMyPassword"/>
	        						<span class="entry">    
	            						<input t:type="Checkbox" t:id="rememberMyPassword" /> 
	        						</span>                                
	        					</div>
                                <!-- Change this to a button or input when using this as a form -->
	                            <div class="button">
	                            	<input type="submit" value="${message:submit}"/>        
	   		 					</div>                                                                                            
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Scripts - Include with every page -->
    <script src="${context:/js/jquery-1.10.2.js}" />
    <script src="${context:/js/bootstrap.min.js}" />
    <script src="${context:/js/plugins/metisMenu/jquery.metisMenu.js}" />

    <!-- SB Admin Scripts - Include with every page -->
    <script src="${context:/js/sb-admin.js}" />

</html>